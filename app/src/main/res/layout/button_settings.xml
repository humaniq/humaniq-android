<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="125dp"
    android:id="@+id/constraintLayout">

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/imageButton3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/selector_settings_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp" app:srcCompat="@mipmap/twitter"
        android:id="@+id/imageView16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1" tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" app:layout_constraintHorizontal_bias="0.48"
        android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" app:layout_constraintVertical_bias="0.95"/>
    <TextView
        android:text="NEW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9" android:textStyle="bold"
        android:textColor="@color/orange"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1" android:layout_marginStart="53dp"
        android:layout_marginTop="42dp" tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/imageView16"
        app:layout_constraintTop_toTopOf="@+id/imageView16" android:layout_marginLeft="53dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
        android:id="@+id/linearLayout6" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@mipmap/add_coins"
            android:id="@+id/imageView17" android:layout_margin="3dp"/>
        <TextView
            android:text="1.71 HC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/textView10"
            android:textSize="24sp" android:textColor="#fff" android:layout_margin="3dp"
            android:gravity="center_vertical"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>