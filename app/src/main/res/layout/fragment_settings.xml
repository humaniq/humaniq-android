<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorPrimary"
    tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp" app:srcCompat="@mipmap/settings"
        android:id="@+id/imageView15"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/guideline4"
                                          app:layout_constraintGuide_percent="0.5"
                                          android:orientation="vertical"
                                          tools:layout_editor_absoluteY="0dp"
                                          tools:layout_editor_absoluteX="160dp"/>
    <include android:layout_width="0dp" android:layout_height="140dp"
             layout="@layout/button_settings"
             android:layout_marginTop="8dp"
             app:layout_constraintTop_toBottomOf="@+id/include3"
             app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
             android:layout_marginRight="16dp" app:layout_constraintRight_toRightOf="parent"
             android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="@+id/guideline4"
             app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.5"/>
    <include android:layout_width="0dp" android:layout_height="140dp"
             layout="@layout/button_settings"
             android:id="@+id/include2"
             android:layout_marginTop="8dp"
             app:layout_constraintTop_toBottomOf="@+id/include2"
             app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
             android:layout_marginLeft="16dp"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toLeftOf="@+id/guideline4"
             android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
             app:layout_constraintVertical_bias="0.5"/>
    <include android:layout_width="0dp" android:layout_height="140dp"
             layout="@layout/button_settings"
             android:id="@+id/include2"
             android:layout_marginTop="8dp"
             app:layout_constraintTop_toBottomOf="@+id/imageView15"
             android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/include2"
             app:layout_constraintRight_toLeftOf="@+id/guideline4"
             android:layout_marginRight="8dp" android:layout_marginLeft="16dp"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.666"/>
    <include android:layout_width="0dp" android:layout_height="140dp"
             layout="@layout/button_settings"
             android:layout_marginTop="8dp"
             app:layout_constraintTop_toBottomOf="@+id/imageView15"
             android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/include3"
             android:layout_marginLeft="8dp" app:layout_constraintVertical_bias="0.666"
             app:layout_constraintLeft_toLeftOf="@+id/guideline4" android:layout_marginRight="16dp"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintHorizontal_bias="0.0"/>
    <include android:layout_width="0dp" android:layout_height="140dp"
             layout="@layout/button_settings"
             android:id="@+id/include3" android:layout_marginLeft="8dp"
             app:layout_constraintLeft_toLeftOf="@+id/guideline4" android:layout_marginRight="16dp"
             app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="8dp"
             app:layout_constraintTop_toBottomOf="@+id/imageView15"
             app:layout_constraintHorizontal_bias="0.0"
             app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
             app:layout_constraintVertical_bias="0.501"/>
    <include android:layout_width="0dp" android:layout_height="140dp"
             layout="@layout/button_settings"
             android:id="@+id/include2"
             app:layout_constraintRight_toLeftOf="@+id/guideline4"
             android:layout_marginRight="8dp" android:layout_marginLeft="16dp"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
             app:layout_constraintTop_toBottomOf="@+id/imageView15"
             app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
             app:layout_constraintVertical_bias="0.501"/>

</android.support.constraint.ConstraintLayout>